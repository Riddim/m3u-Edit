<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Edit_file_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open by browse, or type a new playlist name:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TableRow>

        <EditText
            android:id="@+id/make_filename"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10" >
        </EditText>

        <Button
            android:id="@+id/make_butbrowse"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:text="Browse" />

        <Button
            android:id="@+id/make_sort"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sort" />

    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/make_butmake"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Make/Edit" />

        <Button
            android:id="@+id/make_checkall"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/checkall" />

        <Button
            android:id="@+id/make_uncheckall"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Uncheck All" />
    </TableRow>

    <ListView
        android:id="@+id/make_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </ListView>

</TableLayout>