<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Important:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/Edit_file_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse for your music folder and apply:" />

    <TableRow>

        <EditText
            android:id="@+id/musicpath"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="20" >
        </EditText>

        <Button
            android:id="@+id/browsemusic"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Browse" />
    </TableRow>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Browse for your playlist folder and apply:" />

    <TableRow>

        <EditText
            android:id="@+id/playlistpath"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="20" >
        </EditText>

        <Button
            android:id="@+id/browseplay"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Browse" />
    </TableRow>

  

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You may set it the same as your music folder:)"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optional:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set your start screen here:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TableRow>

        <EditText
            android:id="@+id/numberScreen"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="20"
             android:layout_weight="1" >

        </EditText>

        <Button
            android:id="@+id/applyscreen"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Apply" 
             android:layout_weight="1"/>
    </TableRow>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose between 0 - 3   pls"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</TableLayout>