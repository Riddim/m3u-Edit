<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow>

        <CheckBox
            android:id="@+id/defaultcheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default loc:" />

        <TextView
            android:id="@+id/defaultloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="TextView" />
    </TableRow>

    <TextView
        android:id="@+id/content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type file name + extension" />

    <TableRow>

        <EditText
            android:id="@+id/locFile"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:layout_weight="3">
        </EditText>

        <Button
            android:id="@+id/browseedit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Browse" />

    </TableRow>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The text to replace:" />

    <EditText
        android:id="@+id/replace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With the following text:" />

    <EditText
        android:id="@+id/replacewith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

   <TableRow> 

        <Button
            android:id="@+id/letgo"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Let go" />

        <Button
            android:id="@+id/autoedit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
             android:layout_weight="1"
            android:text="Auto Edit" />

        <Button
            android:id="@+id/fullscreen"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Full Screen" />



    </TableRow>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/filetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FileContent" />
        </LinearLayout>
    </ScrollView>

</TableLayout>