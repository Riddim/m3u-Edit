<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

 <TableRow  >

    <CheckBox
        android:id="@+id/defaultcheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use default location:" />

    <TextView
        android:id="@+id/defaultloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" 
        android:gravity="right"/>

</TableRow>
    <TextView
        android:id="@+id/content2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type file name + extension" />

    <EditText
        android:id="@+id/locFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The text to replace:" />

    <EditText
        android:id="@+id/replace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="With the following text:" />

    <EditText
        android:id="@+id/replacewith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10" />

 <TableRow android:gravity="center_horizontal" >

    <Button
        android:id="@+id/letgo"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let go" />

    <Button
        android:id="@+id/fullscreen"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Screen" />
 </TableRow>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/filetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FileContent" />

        </LinearLayout>
    </ScrollView>

</TableLayout>
